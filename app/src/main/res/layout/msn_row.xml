<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="6dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="60dp"
        android:id="@+id/elayouti"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/elayout"
            android:background="@drawable/shape_imessage">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                app:cardCornerRadius="35dp"
                android:id="@+id/idcard"
                android:visibility="gone"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="35dp"
                app:cardElevation="0dp"
                android:layout_margin="3dp"
                android:layout_height="200dp">

                <ImageView
                    android:layout_width="?actionBarSize"
                    android:scaleType="fitXY"
                    android:background="@drawable/ic_gallery"
                    android:layout_gravity="center"
                    android:id="@+id/sewrf"
                    android:layout_height="?actionBarSize"/>

            <ImageView
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/imgchat"
                android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:visibility="gone"
                android:paddingBottom="20dp"
                android:gravity="left"
                android:id="@+id/setmsn"
                android:layout_gravity="center"
                android:text="....."
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:text="00:00 PM"
            android:textSize="10dp"
            android:id="@+id/tempto"
            android:drawablePadding="3dp"
            android:layout_centerHorizontal="true"
            android:drawableRight="@drawable/ic_done_all_black"
            android:layout_marginTop="9dp"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp"
            android:layout_below="@id/elayout"
            android:layout_height="wrap_content"/>

        </RelativeLayout>

</RelativeLayout>