<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/splash"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/fgg"
        android:textColor="@color/colorPrimary"
        android:textSize="50dp"
        android:text="@string/app_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:id="@+id/edebel"
        android:textStyle="bold"
        android:layout_below="@+id/fgg"
        android:textColor="@color/colorPrimary"
        android:text="Por {e}debelzaak s.o" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textStyle="bold"
        android:visibility="gone"
        android:id="@+id/permissan"
        android:padding="10dp"
        android:textSize="13dp"
        android:textColor="@color/colorPrimary"
        android:text="Você não aceitou as permissões necessárias, que são: armazenamento, câmera e gravar áudio." />

    <com.eyalbira.loadingdots.LoadingDots
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lodeee"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        app:LoadingDots_dots_color="@color/colorPrimary" />

</RelativeLayout>