<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/uiko"
        android:background="@color/colorPrimary"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="?android:actionBarSize"
            android:background="@drawable/cioon2"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="3dp"
            android:layout_height="?android:actionBarSize"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/gh"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:minHeight="?android:actionBarSize"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="?android:actionBarSize"
                android:layout_marginTop="3dp"
                android:id="@+id/atperfil"
                android:layout_marginLeft="3dp"
                android:layout_height="?android:actionBarSize">

                <ImageView
                    android:layout_width="match_parent"
                    android:background="@drawable/cioo44"
                    android:scaleType="fitXY"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:background="@drawable/ic_contact"
                    android:scaleType="centerCrop"
                    android:id="@+id/Kperfili"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:background="@drawable/eion"
                    android:scaleType="fitXY"
                    android:layout_height="match_parent"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/pesqui"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ques"
                android:text="PRÃ‰VIA"
                android:textColor="@color/colorPrimary" />

            <AutoCompleteTextView
                android:layout_weight="1"
                android:inputType="text"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/ques"
                android:cursorVisible="false"
                android:focusable="false"
                android:enabled="false"
                android:visibility="invisible"
                android:textColorHint="@color/colorPrimary"
                android:textColor="@color/colorPrimary" />


            <ImageView
                android:layout_width="?android:actionBarSize"
                android:src="@drawable/ic_identity_24"
                android:padding="9dp"
                android:id="@+id/btnposte"
                android:layout_height="?android:actionBarSize" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/uiko"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ProgressBar
            android:layout_width="32dp"
            android:padding="7dp"
            android:id="@+id/podegi"
            android:indeterminateTint="@color/white"
            android:visibility="invisible"
            android:layout_height="32dp"/>

        <TextView
            android:id="@+id/contslikes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:visibility="invisible"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:background="@drawable/quee"
            android:text="CANCELAR"
            android:layout_marginRight="25dp"
            android:id="@+id/btncanci"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:background="@drawable/quee"
            android:text="ENVIAR"
            android:id="@+id/segueei"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>