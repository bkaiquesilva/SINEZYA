<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/branco"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/uiko"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:background="@drawable/quee"
        android:layout_height="wrap_content">

       <TextView
           android:layout_width="match_parent"
           android:text="E-mail"
           android:id="@+id/etitle"
           android:textSize="12dp"
           android:layout_marginTop="12dp"
           android:textColor="@color/black"
           android:textColorHint="@color/black"
           android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="Ex: edebelzaakso@gmail.com"
            android:gravity="center|left"
            android:padding="10dp"
            android:id="@+id/edt_email"
            android:background="@drawable/butc"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:text="Senha"
            android:textSize="12dp"
            android:id="@+id/s_title"
            android:layout_marginTop="12dp"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:hint="Ex: 123456"
            android:padding="10dp"
            android:id="@+id/edt_senha"
            android:layout_marginBottom="4dp"
            android:background="@drawable/butc"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/uiko"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ProgressBar
            android:layout_width="32dp"
            android:padding="7dp"
            android:id="@+id/podegi"
            android:indeterminateTint="@color/colorPrimary"
            android:visibility="invisible"
            android:layout_height="32dp"/>

        <TextView
            android:id="@+id/contslikes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:visibility="invisible"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="0"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:background="@drawable/quee"
            android:text="CANCELAR"
            android:layout_marginRight="25dp"
            android:id="@+id/btncanci"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:background="@drawable/quee"
            android:text="DELETAR"
            android:id="@+id/btn_dlt"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>