<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/butc"
        android:orientation="vertical"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/layty"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    android:layout_width="match_parent"
                    layout="@layout/include_no_item"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        <ImageView
            android:id="@+id/post_image"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

            <ImageView
                android:layout_width="35dp"
                android:id="@+id/deletr"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_delete"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:background="@drawable/quee"
                android:layout_height="35dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/post_like"
                android:layout_width="32dp"
                android:padding="2dp"
                android:layout_height="32dp"
                android:layout_gravity="start"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_yes_heart_colored" />

            <TextView
                android:id="@+id/contslikes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text="..."
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/post_coment"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="2dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="start"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_comment" />

            <ImageButton
                android:id="@+id/post_share"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="2dp"
                android:layout_gravity="start"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_control" />

            <ImageButton
                android:id="@+id/post_ex"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="2dp"
                android:visibility="gone"
                android:layout_gravity="start"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_delete_f" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>