<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/boloi"
tools:context=".Digite_Senha">

    <ImageView
        android:layout_width="match_parent"
        android:background="@color/colorTransparent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:id="@+id/linea_Bloquei"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginBottom="45dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:id="@+id/verTexto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLength="4"
                        android:textColor="@color/branco"
                        android:textSize="30dp" />

                    <ImageView
                        android:layout_width="?actionBarSize"
                        android:layout_height="?actionBarSize"
                        android:layout_alignParentRight="true"
                        android:padding="7dp"
                        android:alpha="0.6"
                        android:rotation="180"
                        android:onClick="deletii"
                        android:layout_above="@+id/tyuuu"
                        android:src="@drawable/ic_important_24" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/tyuuu"
                        android:alpha="0.6"
                        android:layout_below="@id/verTexto"
                        android:layout_marginLeft="17dp"
                        android:layout_marginRight="17dp"
                        android:background="@color/branco" />

                </RelativeLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="19dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:layout_height="match_parent">


                            <TextView
                                android:layout_width="?actionBarSize"
                                android:layout_height="?actionBarSize"
                                android:text="1"
                                android:layout_centerInParent="true"
                                android:background="@drawable/awwwe"
                                android:onClick="ummm"
                                android:gravity="center"
                                android:textColor="@color/branco"
                                android:textSize="27dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:layout_height="match_parent">

                        <TextView
                            android:layout_width="?actionBarSize"
                            android:layout_centerInParent="true"
                            android:layout_height="?actionBarSize"
                            android:gravity="center"
                            android:text="2"
                            android:onClick="doiss"
                            android:background="@drawable/awwwe"
                            android:textColor="@color/branco"
                            android:textSize="27dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:layout_height="match_parent">

                        <TextView
                            android:layout_width="?actionBarSize"
                            android:layout_height="?actionBarSize"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:textSize="27dp"
                            android:text="3"
                            android:onClick="tress"
                            android:background="@drawable/awwwe"
                            android:textColor="@color/branco" />

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:layout_height="match_parent">

                        <TextView
                            android:layout_width="?actionBarSize"
                            android:layout_height="?actionBarSize"
                            android:layout_centerInParent="true"
                            android:onClick="quatroo"
                            android:text="4"
                            android:gravity="center"
                            android:background="@drawable/awwwe"
                            android:textColor="@color/branco"
                            android:textSize="27dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:layout_height="match_parent">

                        <TextView
                            android:layout_width="?actionBarSize"
                            android:layout_height="?actionBarSize"
                            android:background="@drawable/awwwe"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:text="5"
                            android:onClick="cinco"
                            android:textColor="@color/branco"
                            android:textSize="27dp"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:layout_height="match_parent">

                        <TextView
                            android:layout_width="?actionBarSize"
                            android:layout_height="?actionBarSize"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:onClick="seiss"
                            android:text="6"
                            android:background="@drawable/awwwe"
                            android:textColor="@color/branco"
                            android:textSize="27dp" />

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:layout_height="match_parent">

                        <TextView
                            android:layout_width="?actionBarSize"
                            android:layout_height="?actionBarSize"
                            android:layout_centerInParent="true"
                            android:onClick="setee"
                            android:text="7"
                            android:gravity="center"
                            android:background="@drawable/awwwe"
                            android:textColor="@color/branco"
                            android:textSize="27dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:layout_height="match_parent">

                        <TextView
                            android:layout_width="?actionBarSize"
                            android:layout_height="?actionBarSize"
                            android:gravity="center"
                            android:onClick="oitoo"
                            android:text="8"
                            android:layout_centerInParent="true"
                            android:background="@drawable/awwwe"
                            android:textColor="@color/branco"
                            android:textSize="27dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:layout_height="match_parent">

                        <TextView
                            android:layout_width="?actionBarSize"
                            android:layout_height="?actionBarSize"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:onClick="novee"
                            android:text="9"
                            android:background="@drawable/awwwe"
                            android:textColor="@color/branco"
                            android:textSize="27dp"/>

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="24dp"
                            android:visibility="invisible"
                            android:src="@drawable/ic_check_24"
                            android:gravity="center" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:layout_height="match_parent">

                        <TextView
                            android:layout_width="?actionBarSize"
                            android:layout_height="?actionBarSize"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:onClick="zeroo"
                            android:text="0"
                            android:background="@drawable/awwwe"
                            android:textColor="@color/branco"
                            android:textSize="27dp" />

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="25dp"
                            android:onClick="envio_senha"
                            android:src="@drawable/ic_check_24"
                            android:gravity="center" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>









</RelativeLayout>